<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo3.mapper.UserMapper">

    <select id="getUser" parameterType="com.demo3.model.User" resultType="com.demo3.model.User">
        SELECT * FROM user WHERE username=#{username} AND password=#{password}
    </select>

    <insert id="addUser" parameterType="com.demo3.model.User" flushCache="true">
        INSERT INTO user (id,username,password) VALUES (#{id},#{username},#{password})
    </insert>

    <update id="updateUser" parameterType="com.demo3.model.User">
        UPDATE user SET password=#{password} WHERE id=#{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM user WHERE id=#{id}
    </delete>
</mapper>